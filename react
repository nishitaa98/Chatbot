welcome page
import { useRouter } from "next/router";

export default function Home() {
  const router = useRouter();

  const goToCIF = () => {
    router.push("/create_cif"); // redirect to CIF page
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-blue-100 to-blue-300">
      <h1 className="text-4xl font-bold mb-6 text-blue-800">Welcome to CIF Portal</h1>
      <p className="mb-6 text-center text-blue-700">
        Click below to generate CIF entries
      </p>
      <button
        onClick={goToCIF}
        className="px-6 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition"
      >
        Go to CIF Generator
      </button>
    </div>
  );
}


