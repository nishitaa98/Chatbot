import { styles } from '../../styles/styles.js';

export function LoginPage({ 
  onLogin, error, loading, onSwitchToRegister, 
  setUsername, setPassword, username, password 
}) {
  return (
    <div style={styles.authContainer}>
      <div style={styles.authSplit}>
        <div style={styles.authLeft}>
          <div style={styles.authBrand}>
            <div style={styles.logoCircle}>SBI</div>
            <span style={styles.brandText}>State Bank of India</span>
          </div>
          <h1 style={styles.authLeftTitle}>Welcome Back</h1>
          <p style={styles.authLeftSubtitle}>Sign in to access your test data creation platform</p>
          <div style={styles.authFeatureList}>
            <div style={styles.authFeature}>✓ Automated CIF Generation</div>
            <div style={styles.authFeature}>✓ CCOD Account Creation</div>
            <div style={styles.authFeature}>✓ Deposit Management</div>
          </div>
        </div>
        <div style={styles.authRight}>
          <div style={styles.authForm}>
            <button onClick={() => onSwitchToRegister()} style={styles.backLink}>← Back to Home</button>
            <h2 style={styles.authTitle}>Sign In</h2>
            <p style={styles.authSubtitle}>Enter your credentials to continue</p>
            <div style={styles.formGroup}>
              <label style={styles.label}>Username</label>
              <input
                type="text"
                value={username}
                onChange={(e) => setUsername(e.target.value)}
                style={styles.input}
                placeholder="Enter your username"
                required
              />
            </div>
            <div style={styles.formGroup}>
              <label style={styles.label}>Password</label>
              <input
                type="password"
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                style={styles.input}
                placeholder="Enter your password"
                required
              />
            </div>
            {error && <div style={styles.errorMsg}>{error}</div>}
            <button onClick={onLogin} style={styles.submitBtn} disabled={loading}>
              {loading ? "Signing in..." : "Sign In"}
            </button>
            <div style={styles.divider}>
              <span style={styles.dividerText}>Don't have an account?</span>
            </div>
            <button onClick={() => onSwitchToRegister()} style={styles.switchBtn}>Create Account</button>
          </div>
        </div>
      </div>
    </div>
  );
}
5. /components/Auth/RegisterPage.jsx
CopyRun
import { styles } from '../../styles/styles.js';

export function RegisterPage({ 
  onRegister, message, loading, onSwitchToLogin, 
  setUsername, setPassword, setConfirmPassword, setFirstName, setLastName, setDepartmentCode,
  username, password, confirmPassword, firstName, lastName, departmentCode 
}) {
  return (
    <div style={styles.authContainer}>
      <div style={styles.authSplit}>
        <div style={styles.authLeft}>
          <div style={styles.authBrand}>
            <div style={styles.logoCircle}>SBI</div>
            <span style={styles.brandText}>State Bank of India</span>
          </div>
          <h1 style={styles.authLeftTitle}>Join Our Platform</h1>
          <p style={styles.authLeftSubtitle}>Create an account to start generating test data</p>
          <div style={styles.authFeatureList}>
            <div style={styles.authFeature}>✓ Quick Setup Process</div>
            <div style={styles.authFeature}>✓ Secure Authentication</div>
            <div style={styles.authFeature}>✓ Full Platform Access</div>
          </div>
        </div>
        <div style={styles.authRight}>
          <div style={styles.authForm}>
            <button onClick={() => onSwitchToLogin()} style={styles.backLink}>← Back to Home</button>
            <h2 style={styles.authTitle}>Create Account</h2>
            <p style={styles.authSubtitle}>Fill in your details to get started</p>
            {/* Form inputs */}
            <div style={styles.formGroup}>
              <label style={styles.label}>Username</label>
              <input
                type="text"
                value={username}
                onChange={(e) => setUsername(e.target.value)}
                style={styles.input}
                placeholder="Choose a username"
                required
              />
            </div>
            <div style={styles.formRow}>
              <div style={styles.formGroup}>
                <label style={styles.label}>First Name</label>
                <input
                  type="text"
                  value={firstName}
                  onChange={(e) => setFirstName(e.target.value)}
                  style={styles.input}
                  placeholder="First name"
                  required
                />
              </div>
              <div style={styles.formGroup}>
                <label style={styles.label}>Last Name</label>
                <input
                  type="text"
                  value={lastName}
                  onChange={(e) => setLastName(e.target.value)}
                  style={styles.input}
                  placeholder="Last name"
                  required
                />
              </div>
            </div>
            <div style={styles.formGroup}>
              <label style={styles.label}>Department Code</label>
              <input
                type="number"
                value={departmentCode}
                onChange={(e) => setDepartmentCode(e.target.value)}
                style={styles.input}
                placeholder="Enter department code"
                required
              />
            </div>
            <div style={styles.formGroup}>
              <label style={styles.label}>Password</label>
              <input
                type="password"
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                style={styles.input}
                placeholder="Create a password"
                required
              />
            </div>
            <div style={styles.formGroup}>
              <label style={styles.label}>Confirm Password</label>
              <input
                type="password"
                value={confirmPassword}
                onChange={(e) => setConfirmPassword(e.target.value)}
                style={styles.input}
                placeholder="Confirm your password"
                required
              />
            </div>
            {message && (
              <div style={{
                ...styles.errorMsg,
                backgroundColor: message.startsWith("Error") ? "#ffebee" : "#e8f5e9",
                color: message.startsWith("Error") ? "#c62828" : "#2e7d32"
              }}>
                {message}
              </div>
            )}
            <button onClick={onRegister} style={styles.submitBtn} disabled={loading}>
              {loading ? "Creating Account..." : "Create Account"}
            </button>
            <div style={styles.divider}>
              <span style={styles.dividerText}>Already have an account?</span>
            </div>
            <button onClick={() => onSwitchToLogin()} style={styles.switchBtn}>Sign In Instead</button>
          </div>
        </div>
      </div>
    </div>
  );
}
6. /components/Dashboard/Dashboard.jsx
CopyRun
import { useState } from "react";
import { Navbar } from "../Common/Navbar";
import Sidebar from "./Sidebar";
import StatsGrid from "./StatsGrid";
import ProfileCard from "./ProfileCard";
import CIFCreation from "./CIFCreation";
import ComingSoon from "./ComingSoon";

export default function Dashboard({ user, onLogout }) {
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [activeService, setActiveService] = useState("home");

  const toggleSidebar = () => setSidebarOpen(!sidebarOpen);

  return (
    <div style={styles.dashboardContainer}>
      <Navbar onSidebarToggle={toggleSidebar} onLogout={onLogout} user={user} />
      <div style={styles.mainContainer}>
        <Sidebar activeService={activeService} setActiveService={setActiveService} sidebarOpen={sidebarOpen} />
        <main style={styles.content}>
          {activeService === "home" && <StatsGrid user={user} />}
          {activeService === "cif" && <CIFCreation />}
          {activeService === "ccod" && <ComingSoon title="CCOD Account Creation" />}
          {activeService === "deposit" && <ComingSoon title="Deposit Account Creation" />}
        </main>
      </div>
    </div>
  );
}
7. /components/Dashboard/Sidebar.jsx
CopyRun
import { Home, FileText, DollarSign, Zap } from "lucide-react";
import { styles } from '../../styles/styles.js';

export default function Sidebar({ activeService, setActiveService, sidebarOpen }) {
  if (!sidebarOpen) return null;

  return (
    <aside style={{ ...styles.sidebar, width: "260px" }}>
      <div style={styles.sidebarContent}>
        {/* Main Menu */}
        <div style={styles.sidebarSection}>
          <div style={styles.sidebarLabel}>MAIN MENU</div>
          <button
            onClick={() => setActiveService("home")}
            style={{
              ...styles.sidebarBtn,
              backgroundColor: activeService === "home" ? "#e3f2fd" : "transparent",
              color: activeService === "home" ? "#003478" : "#666",
              fontWeight: activeService === "home" ? "600" : "normal",
            }}
          >
            <Home size={20} /> Dashboard
          </button>
        </div>
        {/* Services */}
        <div style={styles.sidebarSection}>
          <div style={styles.sidebarLabel}>SERVICES</div>
          <button
            onClick={() => setActiveService("cif")}
            style={{
              ...styles.sidebarBtn,
              backgroundColor: activeService === "cif" ? "#e3f2fd" : "transparent",
              color: activeService === "cif" ? "#003478" : "#666",
              fontWeight: activeService === "cif" ? "600" : "normal",
            }}
          >
            <FileText size={20} /> CIF Creation
          </button>
          <button
            onClick={() => setActiveService("ccod")}
            style={{
              ...styles.sidebarBtn,
              backgroundColor: activeService === "ccod" ? "#e3f2fd" : "transparent",
              color: activeService === "ccod" ? "#003478" : "#666",
              fontWeight: activeService === "ccod" ? "600" : "normal",
            }}
          >
            <DollarSign size={20} /> CCOD Account
          </button>
          <button
            onClick={() => setActiveService("deposit")}
            style={{
              ...styles.sidebarBtn,
              backgroundColor: activeService === "deposit" ? "#e3f2fd" : "transparent",
              color: activeService === "deposit" ? "#003478" : "#666",
              fontWeight: activeService === "deposit" ? "600" : "normal",
            }}
          >
            <Zap size={20} /> Deposit Account
          </button>
        </div>
      </div>
    </aside>
  );
}
