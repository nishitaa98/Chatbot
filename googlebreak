10. /components/Dashboard/CIFCreation.jsx
CopyRun
import { useState } from "react";
import { styles } from '../../styles/styles.js';

export default function CIFCreation() {
  const [region, setRegion] = useState("O");
  const [no_cif, setNoCif] = useState(1);
  const [acc_type, setAccType] = useState('PCIF');
  const [response, setCifResponse] = useState([]);
  const [cifLoading, setCifLoading] = useState(false);

  const handleCifSubmit = async () => {
    // your fetch logic here
  };

  const downloadCsv = () => {
    if (!response || response.length === 0) {
      alert("No data to download.");
      return;
    }
    let csvContent = "data:text/csv;charset=utf-8,Customer Number\n";
    response.forEach((item) => {
      try {
        const parsedResData = JSON.parse(item.res_data);
        csvContent += `"${parsedResData.CUSTOMER_NUMBER || ""}"\n`;
      } catch (e) {
        console.error("CSV parse error:", e);
      }
    });
    const link = document.createElement("a");
    link.setAttribute("href", encodeURI(csvContent));
    link.setAttribute("download", "cif_data.csv");
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  return (
    <div>
      {/* Your form UI and display logic here, e.g., form inputs for region, no_cif, acc_type, generate button, and response table */}
    </div>
  );
}
Main App (SBIApp.jsx)
Finally, your main app should import and render these components:

CopyRun
import { useState, useEffect } from "react";
import { Loader } from './components/Common/Loader.jsx';
import { LoginPage } from './components/Auth/LoginPage.jsx';
import { RegisterPage } from './components/Auth/RegisterPage.jsx';
import Dashboard from './components/Dashboard/Dashboard.jsx';
import { styles } from './styles/styles.js';

export default function SBIApp() {
  const [currentPage, setCurrentPage] = useState("welcome");
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState("");

  const [username, setUsername] = useState("");
  const [password, setPassword] = useState("");
  const [message, setMessage] = useState("");

  const [user, setUser] = useState(null);
  const [userToken, setToken] = useState(null);

  // Fetch user profile logic here...

  const handleLogin = async () => { /* your login logic */ };
  const handleRegister = async () => { /* your registration logic */ };
  const handleLogout = () => { /* your logout logic */ };

  if (loading) return <Loader />;

  if (!isLoggedIn) {
    if (currentPage === "login")
      return (
        <LoginPage 
          onLogin={handleLogin}
          error={error}
          loading={loading}
          onSwitchToRegister={() => setCurrentPage("register")}
          setUsername={setUsername}
          setPassword={setPassword}
          username={username}
          password={password}
        />
      );
    if (currentPage === "register")
      return (
        <RegisterPage
          onRegister={handleRegister}
          message={message}
          loading={loading}
          onSwitchToLogin={() => setCurrentPage("login")}
          setUsername={setUsername}
          setPassword={setPassword}
          setConfirmPassword={() => {}}
          setFirstName={() => {}}
          setLastName={() => {}}
          setDepartmentCode={() => {}}
          username={username}
          password={password}
          confirmPassword=""
          firstName=""
          lastName=""
          departmentCode={0}
        />
      );
  }

  if (isLoggedIn && user)
    return <Dashboard user={user} onLogout={handleLogout} />;

  return null; // fallback
}
