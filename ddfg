// src/utils/ckycValidation.js

export function validateCKYC(cif) {
  const errors = {};

  // 1️⃣ Clean input
  const cleanedCif = cif?.trim().toUpperCase();

  // 2️⃣ Allow letters, numbers, and spaces — exactly 11 characters
  const cifRegex = /^[A-Z0-9 ]{11}$/;

  // 3️⃣ Validation
  if (!cleanedCif) {
    errors.cif = "CIF is required";
  } else if (!cifRegex.test(cleanedCif)) {
    errors.cif =
      "CIF must be exactly 11 characters (letters, numbers, spaces allowed)";
  }

  return {
    errors,
    cleanedCif, // use this if you want the formatted value
  };
}