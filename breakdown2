CopyRun
'use client';

import { useState } from 'react';
import { Loader } from '../components/Common/Loader.jsx';
import { LoginPage } from '../components/Auth/LoginPage.jsx';
import { RegisterPage } from '../components/Auth/RegisterPage.jsx';
import { styles } from '../styles/styles.js';
import Dashboard from '../components/Dashboard/Dashboard.jsx';

export default function App() {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(false);

  // Your logic for login, logout, user state

  if (loading) return <Loader />;

  return (
    <div style={styles.container}>
      {!user ? (
        <>
          {/* Show login/register */}
        </>
      ) : (
        <Dashboard user={user} />
      )}
    </div>
  );
}
10. components/Dashboard/Dashboard.jsx
CopyRun
import { useState } from 'react';

export default function Dashboard({ user }) {
  const [activeTab, setActiveTab] = useState('CIF');

  return (
    <div>
      <nav>
        <button onClick={() => setActiveTab('CIF')}>Create CIF</button>
        <button onClick={() => setActiveTab('Deposit')}>Deposit Account</button>
        <button onClick={() => setActiveTab('HomeLoan')}>Home Loan Account</button>
        <button onClick={() => setActiveTab('CKYC')}>Create CKYC</button>
      </nav>
      {activeTab === 'CIF' && <components/Dashboard/CIFCreation />}
      {activeTab === 'Deposit' && <components/Dashboard/DepositAccount />}
      {activeTab === 'HomeLoan' && <components/Dashboard/HomeLoanAccount />}
      {activeTab === 'CKYC' && <components/ckyc/CKYCPage />}
    </div>
  );
}
